<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:minHeight="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answers Here"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/usn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="USN"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />

            <EditText
                android:id="@+id/q1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="90dp"
                android:hint="Question 1"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/q1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:text="1"
                android:background="@drawable/button_back" />

            <EditText
                android:id="@+id/q2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="150dp"
                android:autofillHints=""
                android:hint="Question 2"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/q2"
                android:text="2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/button_back"/>

            <EditText
                android:id="@+id/q3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="210dp"
                android:autofillHints=""
                android:hint="Question 3"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />
            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/q3"
                android:text="3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/button_back" />

            <EditText
                android:id="@+id/q4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="270dp"
                android:autofillHints=""
                android:hint="Question 4"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/q4"
                android:layout_alignParentStart="true"
                android:text="4"
                android:layout_marginStart="40dp"
                android:background="@drawable/button_back" />

            <EditText
                android:id="@+id/q5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="330dp"
                android:autofillHints=""
                android:hint="Question 5"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/q5"
                android:text="5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/button_back" />

            <EditText
                android:id="@+id/q6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="185dp"
                android:layout_marginTop="390dp"
                android:autofillHints=""
                android:hint="Question 6"
                android:inputType="text"
                android:maxLength="2000"
                android:padding="10dp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_alignTop="@+id/q6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:background="@drawable/button_back" />

            <Button
                android:id="@+id/buttonDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/b6"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_red"
                android:text="Done"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>